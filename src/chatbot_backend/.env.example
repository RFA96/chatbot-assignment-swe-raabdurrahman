# Application Settings
APP_NAME=E-Commerce Chatbot Backend
APP_VERSION=1.0.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
DB_NAME=ecommerce_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12

# Google GenAI Configuration
# Set to true to use Vertex AI, false to use Google AI Studio
GOOGLE_GENAI_USE_VERTEXAI=false

# Google AI Studio API Key (required if GOOGLE_GENAI_USE_VERTEXAI=false)
GOOGLE_API_KEY=your-google-api-key-here

# Vertex AI Configuration (required if GOOGLE_GENAI_USE_VERTEXAI=true)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Model Selection
# Options: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash
VERTEX_AI_MODEL=gemini-2.0-flash
